<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import org.kordamp.ikonli.javafx.StackedFontIcon?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0"
      prefWidth="180.0" styleClass="main_menu_container" stylesheets="@../../Styles/ClientMenu.css"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.maze.Controllers.Client.ClientMenuController">
    <AnchorPane prefHeight="730.0" prefWidth="160.0" styleClass="left_container">
        <VBox prefHeight="80.0" prefWidth="160.0" styleClass="title_container" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <FontIcon iconLiteral="fas-dice-d20" iconSize="30"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="NAAS"/>
        </VBox>
        <VBox prefHeight="400.0" prefWidth="160.0" styleClass="menu_container" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <Button fx:id="dashboard_btn" mnemonicParsing="false" text="Dashboard">
                <graphic>
                    <FontIcon iconLiteral="fas-home" iconSize="20" text=""/>
                </graphic>
            </Button>
            <Button fx:id="transection_btn" mnemonicParsing="false" text="Transaction">
                <graphic>
                    <FontIcon iconLiteral="fas-handshake" iconSize="20" text=""/>
                </graphic>
            </Button>
            <Button fx:id="accounts_btn" mnemonicParsing="false" text="Accounts">
                <graphic>
                    <FontIcon iconLiteral="fas-address-book" iconSize="20" text=""/>
                </graphic>
            </Button>
            <Line endX="120.0"/>
            <Button fx:id="profile_btn" mnemonicParsing="false" styleClass="alt_menu_btn" text="Profile">
                <graphic>
                    <FontIcon iconLiteral="fas-user" iconSize="20"/>
                </graphic>
            </Button>
            <Button fx:id="logout_btn" mnemonicParsing="false" styleClass="alt_menu_btn" text="Logout">
                <graphic>
                    <FontIcon iconLiteral="fas-sign-out-alt" iconSize="20"/>
                </graphic>
            </Button>
            <StackedFontIcon/>
        </VBox>
        <VBox prefHeight="120.0" prefWidth="130.0" styleClass="report_container" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Got any suggestions?"/>
            <Label text="Use this to report any errors or suggestions"/>
            <Button fx:id="report_btn" mnemonicParsing="false" text="Report">
                <graphic>
                    <FontIcon iconLiteral="fas-plus" iconSize="12"/>
                </graphic>
            </Button>
        </VBox>
    </AnchorPane>
</VBox>
